<%= stylesheet_link_tag "new_user"%>
<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
            <%= form_for @user do |form|%>

              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <%= form.text_field :first_name,id:"firstName",class:"form-control form-control-lg",placeholder:"First Name"%>
                  </div>
                </div>
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <%= form.text_field :last_name,id:"lastName",class:"form-control form-control-lg",placeholder:"Last Name"%>
                  </div>

                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4 d-flex align-items-center">

                  <div class="form-outline datepicker w-100">
                  	<%= form.text_field :username,id:"username",class:"form-control form-control-lg",placeholder:"Username"%>
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <h6 class="mb-2 pb-1">Role: </h6>

                  <div class="form-check form-check-inline">
                    <%= form.radio_button :role,"janitor",class:"form-check-input",id:"janitor_role"%>
                    <%= form.label "Janitor"%>
                  </div>

                  <div class="form-check form-check-inline">
                    <%= form.radio_button :role,"player",class:"form-check-input",id:"player_role"%>
                    <%= form.label "Player"%>
                  </div>

                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <%= form.email_field :email,class:"form-control form-control-lg",placeholder:"Email"%>
                  </div>

                </div>
                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <%= form.number_field :pubg_id,class:"form-control form-control-lg",placeholder:"Pubg id"%>
                  </div>

                </div>
              </div>
              <div class="row">
              	<div class="col-md-6 mb-4 pb-2">
              		<div class="forum-outline">
              			<%= form.password_field :password,class:"form-control form-control-lg",placeholder:"Password"%>
              		</div>
              	</div>
              	<div class="col-md-6 mb-4 pb-2">
              		<div class="forum-outline">
              			<%= form.password_field :password_confirmation,class:"form-control form-control-lg",placeholder:"Password confirmation"%>
              		</div>
              	</div>
              </div>
              <div class="mt-4 pt-2">
                <!--input class="btn btn-primary btn-lg" type="submit" value="Submit" -->
                <%= form.submit "Kaydol",class:"btn btn-primary btn-lg"%>
              </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
