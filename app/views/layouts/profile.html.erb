<% content_for(:content) do%>
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-10" style="padding-top:10px;">
      		<%= image_tag "https://www.gravatar.com/avatar/akdlakdasdansda4c1naodasosn?s=60",style:"border-radius:50%;",alt:"profile-photo"%>
      		<h4 style="display:inline;"><%= @user.username%></h4><%= link_to "Düzenle",edit_profile_path,class:"btn btn-secondary",style:"margin-left:10px;" if current_user == @user%>
      		<h5 class="float-end" style="display:inline;margin-top:10px;"><%= "#{@user.first_name} #{@user.last_name}"%></h5>
      		<% if @user == current_user%>
	      		<div class="row" style="margin-top:10px;">
	      			<div class="col-md-12">
	      				<%= link_to "Kazandığım ödüller",prize_path(@user.username),class:"btn btn-warning"%>
	      				<%= link_to "Geçmişim",history_path(@user.username),class:"btn btn-secondary float-end"%>
	      			</div>
	      		</div>
	      	<%end%>
      		<hr style="border:1px solid black"/>
		</div>
		<div class="col-md-1"></div>
	</div>
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-10">
			<%= yield(:profile_content)%>
			<%=@data%>
		</div>
		<div class="col-md-1"></div>
	</div>
<%end%>

<%= render template:"layouts/application"%>